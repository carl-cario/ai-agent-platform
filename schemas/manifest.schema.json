{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Agent Manifest",
  "type": "object",
  "required": [
    "name",
    "model",
    "systemPrompt",
    "tools",
    "inputs",
    "outputs"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique agent name"
    },
    "model": {
      "type": "string",
      "description": "LLM model used by the agent"
    },
    "systemPrompt": {
      "type": "string",
      "description": "Path to system prompt file (e.g. prompts/system.txt)"
    },
    "tools": {
      "type": "array",
      "description": "List of tools the agent can use",
      "items": {
        "type": "string"
      }
    },
    "inputs": {
      "type": "array",
      "description": "Expected input fields",
      "items": {
        "type": "string"
      }
    },
    "outputs": {
      "type": "array",
      "description": "Expected output fields",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
